<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[JDS] EFT Apparel</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="JDSTarkov_Headgear_Altyn_Helmet_Shield"]/statBases</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="JDSTarkov_Headgear_Altyn_Helmet_Shield"]</xpath>
            <value>
              <statBases />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="JDSTarkov_Headgear_Altyn_Helmet_Shield"]/statBases</xpath>
          <value>
            <statBases>
              <MaxHitPoints>75</MaxHitPoints>
              <Flammability>1</Flammability>
              <DeteriorationRate>2</DeteriorationRate>
              <Beauty>-3</Beauty>
              <WorkToMake>10000</WorkToMake>
              <Mass>4</Mass>
              <StuffEffectMultiplierArmor>0.75</StuffEffectMultiplierArmor>
              <StuffEffectMultiplierInsulation_Cold>0.2</StuffEffectMultiplierInsulation_Cold>
              <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
              <EquipDelay>2.5</EquipDelay>
              <Bulk>6</Bulk>
              <WornBulk>2</WornBulk>
              <ArmorRating_Sharp>10</ArmorRating_Sharp>
              <ArmorRating_Blunt>40</ArmorRating_Blunt>
              <ArmorRating_Heat>0.54</ArmorRating_Heat>
            </statBases>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="JDSTarkov_Headgear_Altyn_Helmet_Shield"]</xpath>
          <value>
            <li Class="CombatExtended.PartialArmorExt">
              <stats>
                <li>
                  <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
                  <parts>
                    <li>Eye</li>
                    <li>Nose</li>
                    <li>Jaw</li>
                    <li>Tongue</li>
                  </parts>
                </li>
              </stats>
            </li>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="JDSTarkov_Headgear_Altyn_Helmet_Shield"]/equippedStatOffsets</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="JDSTarkov_Headgear_Altyn_Helmet_Shield"]</xpath>
            <value>
              <equippedStatOffsets />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="JDSTarkov_Headgear_Altyn_Helmet_Shield"]/equippedStatOffsets</xpath>
          <value>
            <equippedStatOffsets>
              <Suppressability>-0.1</Suppressability>
              <AimingDelayFactor>0.15</AimingDelayFactor>
            </equippedStatOffsets>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="JDSTarkov_Headgear_Altyn_Helmet_Shield"]/apparel</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="JDSTarkov_Headgear_Altyn_Helmet_Shield"]</xpath>
            <value>
              <apparel />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="JDSTarkov_Headgear_Altyn_Helmet_Shield"]/apparel/bodyPartGroups</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="JDSTarkov_Headgear_Altyn_Helmet_Shield"]/apparel</xpath>
            <value>
              <bodyPartGroups />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="JDSTarkov_Headgear_Altyn_Helmet_Shield"]/apparel/bodyPartGroups</xpath>
          <value>
            <bodyPartGroups>
              <li>UpperHead</li>
              <li>Ears</li>
              <li>Visor</li>
            </bodyPartGroups>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>