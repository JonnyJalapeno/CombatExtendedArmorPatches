<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[JDS] EFT Apparel</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="JDSTarkov_SOE_Micro"]/statBases</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="JDSTarkov_SOE_Micro"]</xpath>
            <value>
              <statBases />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="JDSTarkov_SOE_Micro"]/statBases</xpath>
          <value>
            <statBases>
              <MaxHitPoints>75</MaxHitPoints>
              <Flammability>1</Flammability>
              <DeteriorationRate>2</DeteriorationRate>
              <Beauty>-3</Beauty>
              <WorkToMake>9000</WorkToMake>
              <Mass>0.8</Mass>
              <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
              <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
              <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
              <EquipDelay>3</EquipDelay>
              <Bulk>4</Bulk>
              <WornBulk>0</WornBulk>
            </statBases>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="JDSTarkov_SOE_Micro"]</xpath>
          <value>
            <li Class="CombatExtended.PartialArmorExt">
              <stats />
            </li>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="JDSTarkov_SOE_Micro"]/equippedStatOffsets</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="JDSTarkov_SOE_Micro"]</xpath>
            <value>
              <equippedStatOffsets />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="JDSTarkov_SOE_Micro"]/equippedStatOffsets</xpath>
          <value>
            <equippedStatOffsets>
              <MedicalTendSpeed>0.05</MedicalTendSpeed>
              <CarryBulk>15</CarryBulk>
              <ReloadSpeed>0.1</ReloadSpeed>
            </equippedStatOffsets>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="JDSTarkov_SOE_Micro"]/apparel</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="JDSTarkov_SOE_Micro"]</xpath>
            <value>
              <apparel />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="JDSTarkov_SOE_Micro"]/apparel/bodyPartGroups</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="JDSTarkov_SOE_Micro"]/apparel</xpath>
            <value>
              <bodyPartGroups />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="JDSTarkov_SOE_Micro"]/apparel/bodyPartGroups</xpath>
          <value>
            <bodyPartGroups>
              <li>Shoulders</li>
            </bodyPartGroups>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="JDSTarkov_SOE_Micro"]/apparel/layers</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="JDSTarkov_SOE_Micro"]/apparel</xpath>
            <value>
              <layers />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="JDSTarkov_SOE_Micro"]/apparel/layers</xpath>
          <value>
            <layers>
              <li>Webbing</li>
            </layers>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>