<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[RH2] Rimmu-Nation² - Clothing</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="RNApparel_Pants_SuitBrioni"]/statBases</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="RNApparel_Pants_SuitBrioni"]</xpath>
            <value>
              <statBases />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="RNApparel_Pants_SuitBrioni"]/statBases</xpath>
          <value>
            <statBases>
              <MaxHitPoints>180</MaxHitPoints>
              <Flammability>1</Flammability>
              <DeteriorationRate>2</DeteriorationRate>
              <Beauty>-3</Beauty>
              <WorkToMake>2500</WorkToMake>
              <Mass>0.55</Mass>
              <StuffEffectMultiplierArmor>1.75</StuffEffectMultiplierArmor>
              <Bulk>1</Bulk>
              <StuffEffectMultiplierInsulation_Cold>0.28</StuffEffectMultiplierInsulation_Cold>
              <StuffEffectMultiplierInsulation_Heat>0.12</StuffEffectMultiplierInsulation_Heat>
              <EquipDelay>2</EquipDelay>
            </statBases>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="RNApparel_Pants_SuitBrioni"]</xpath>
          <value>
            <li Class="CombatExtended.PartialArmorExt">
              <stats />
            </li>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="RNApparel_Pants_SuitBrioni"]/equippedStatOffsets</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="RNApparel_Pants_SuitBrioni"]</xpath>
            <value>
              <equippedStatOffsets />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="RNApparel_Pants_SuitBrioni"]/equippedStatOffsets</xpath>
          <value>
            <equippedStatOffsets>
              <SocialImpact>0.05</SocialImpact>
              <TradePriceImprovement>0.02</TradePriceImprovement>
              <NegotiationAbility>0.02</NegotiationAbility>
            </equippedStatOffsets>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="RNApparel_Pants_SuitBrioni"]/apparel</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="RNApparel_Pants_SuitBrioni"]</xpath>
            <value>
              <apparel />
            </value>
          </nomatch>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>