<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[RH2] Rimmu-Nation² - Clothing</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="RNApparel_ButtonShirt_Generic"]/statBases</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="RNApparel_ButtonShirt_Generic"]</xpath>
            <value>
              <statBases />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="RNApparel_ButtonShirt_Generic"]/statBases</xpath>
          <value>
            <statBases>
              <MaxHitPoints>120</MaxHitPoints>
              <Flammability>1</Flammability>
              <DeteriorationRate>2</DeteriorationRate>
              <Beauty>-3</Beauty>
              <WorkToMake>2700</WorkToMake>
              <Mass>0.32</Mass>
              <StuffEffectMultiplierArmor>1</StuffEffectMultiplierArmor>
              <Bulk>1</Bulk>
              <StuffEffectMultiplierInsulation_Cold>0.27</StuffEffectMultiplierInsulation_Cold>
              <StuffEffectMultiplierInsulation_Heat>0.12</StuffEffectMultiplierInsulation_Heat>
              <EquipDelay>1.5</EquipDelay>
            </statBases>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="RNApparel_ButtonShirt_Generic"]</xpath>
          <value>
            <li Class="CombatExtended.PartialArmorExt">
              <stats />
            </li>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="RNApparel_ButtonShirt_Generic"]/equippedStatOffsets</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="RNApparel_ButtonShirt_Generic"]</xpath>
            <value>
              <equippedStatOffsets />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="RNApparel_ButtonShirt_Generic"]/equippedStatOffsets</xpath>
          <value>
            <equippedStatOffsets>
              <SocialImpact>0.05</SocialImpact>
              <TradePriceImprovement>0.02</TradePriceImprovement>
              <NegotiationAbility>0.02</NegotiationAbility>
            </equippedStatOffsets>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="RNApparel_ButtonShirt_Generic"]/apparel</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="RNApparel_ButtonShirt_Generic"]</xpath>
            <value>
              <apparel />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="RNApparel_ButtonShirt_Generic"]/apparel/bodyPartGroups</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="RNApparel_ButtonShirt_Generic"]/apparel</xpath>
            <value>
              <bodyPartGroups />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="RNApparel_ButtonShirt_Generic"]/apparel/bodyPartGroups</xpath>
          <value>
            <bodyPartGroups>
              <li>Neck</li>
              <li>Shoulders</li>
              <li>UpperChest</li>
              <li>Waist</li>
            </bodyPartGroups>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>