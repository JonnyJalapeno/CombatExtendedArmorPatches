<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[RH2] Rimmu-Nation² - Clothing</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="RNApparel_PinnacleArmor_DragonSkin"]/statBases</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="RNApparel_PinnacleArmor_DragonSkin"]</xpath>
            <value>
              <statBases />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="RNApparel_PinnacleArmor_DragonSkin"]/statBases</xpath>
          <value>
            <statBases>
              <MaxHitPoints>115</MaxHitPoints>
              <Flammability>0.6</Flammability>
              <DeteriorationRate>2</DeteriorationRate>
              <Beauty>-3</Beauty>
              <WorkToMake>10000</WorkToMake>
              <Mass>20</Mass>
              <Bulk>33</Bulk>
              <WornBulk>11</WornBulk>
              <ArmorRating_Sharp>20</ArmorRating_Sharp>
              <ArmorRating_Blunt>90</ArmorRating_Blunt>
              <ArmorRating_Heat>0.21</ArmorRating_Heat>
              <Insulation_Cold>1</Insulation_Cold>
              <EquipDelay>6</EquipDelay>
            </statBases>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="RNApparel_PinnacleArmor_DragonSkin"]</xpath>
          <value>
            <li Class="CombatExtended.PartialArmorExt">
              <stats>
                <li>
                  <ArmorRating_Sharp>0.3</ArmorRating_Sharp>
                  <parts>
                    <li>Neck</li>
                    <li>Clavicle</li>
                    <li>Pelvis</li>
                    <li>Waist</li>
                    <li>Intestines</li>
                    <li>Shoulder</li>
                  </parts>
                </li>
                <li>
                  <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
                  <parts>
                    <li>Neck</li>
                    <li>Clavicle</li>
                    <li>Pelvis</li>
                    <li>Waist</li>
                    <li>Intestines</li>
                    <li>Shoulder</li>
                  </parts>
                </li>
              </stats>
            </li>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="RNApparel_PinnacleArmor_DragonSkin"]/equippedStatOffsets</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="RNApparel_PinnacleArmor_DragonSkin"]</xpath>
            <value>
              <equippedStatOffsets />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="RNApparel_PinnacleArmor_DragonSkin"]/equippedStatOffsets</xpath>
          <value>
            <equippedStatOffsets />
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="RNApparel_PinnacleArmor_DragonSkin"]/apparel</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="RNApparel_PinnacleArmor_DragonSkin"]</xpath>
            <value>
              <apparel />
            </value>
          </nomatch>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>