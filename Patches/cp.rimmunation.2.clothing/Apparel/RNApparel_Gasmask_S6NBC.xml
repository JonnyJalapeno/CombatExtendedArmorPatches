<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[RH2] Rimmu-Nation² - Clothing</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="RNApparel_Gasmask_S6NBC"]/statBases</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="RNApparel_Gasmask_S6NBC"]</xpath>
            <value>
              <statBases />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="RNApparel_Gasmask_S6NBC"]/statBases</xpath>
          <value>
            <statBases>
              <MaxHitPoints>110</MaxHitPoints>
              <Flammability>1</Flammability>
              <DeteriorationRate>2</DeteriorationRate>
              <Beauty>-3</Beauty>
              <WorkToMake>4000</WorkToMake>
              <Mass>0.5</Mass>
              <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
              <StuffEffectMultiplierInsulation_Cold>0.3</StuffEffectMultiplierInsulation_Cold>
              <StuffEffectMultiplierInsulation_Heat>0.4</StuffEffectMultiplierInsulation_Heat>
              <EquipDelay>1.2</EquipDelay>
              <Bulk>3</Bulk>
              <WornBulk>1</WornBulk>
              <ArmorRating_Sharp>1</ArmorRating_Sharp>
              <ArmorRating_Blunt>1</ArmorRating_Blunt>
            </statBases>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="RNApparel_Gasmask_S6NBC"]</xpath>
          <value>
            <li Class="CombatExtended.PartialArmorExt">
              <stats>
                <li>
                  <ArmorRating_Sharp>0.33</ArmorRating_Sharp>
                  <parts>
                    <li>Nose</li>
                    <li>Jaw</li>
                    <li>Tongue</li>
                  </parts>
                </li>
                <li>
                  <ArmorRating_Blunt>0.33</ArmorRating_Blunt>
                  <parts>
                    <li>Nose</li>
                    <li>Jaw</li>
                    <li>Tongue</li>
                  </parts>
                </li>
              </stats>
            </li>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="RNApparel_Gasmask_S6NBC"]/equippedStatOffsets</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="RNApparel_Gasmask_S6NBC"]</xpath>
            <value>
              <equippedStatOffsets />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="RNApparel_Gasmask_S6NBC"]/equippedStatOffsets</xpath>
          <value>
            <equippedStatOffsets>
              <ToxicEnvironmentResistance>0.5</ToxicEnvironmentResistance>
              <SmokeSensitivity>-1</SmokeSensitivity>
              <AimingDelayFactor>0.1</AimingDelayFactor>
            </equippedStatOffsets>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="RNApparel_Gasmask_S6NBC"]/apparel</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="RNApparel_Gasmask_S6NBC"]</xpath>
            <value>
              <apparel />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="RNApparel_Gasmask_S6NBC"]/apparel/bodyPartGroups</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="RNApparel_Gasmask_S6NBC"]/apparel</xpath>
            <value>
              <bodyPartGroups />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="RNApparel_Gasmask_S6NBC"]/apparel/bodyPartGroups</xpath>
          <value>
            <bodyPartGroups>
              <li>Visor</li>
            </bodyPartGroups>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>