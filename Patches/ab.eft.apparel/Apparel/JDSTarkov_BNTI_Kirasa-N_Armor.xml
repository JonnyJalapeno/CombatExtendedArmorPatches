<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[JDS] EFT Apparel</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="JDSTarkov_BNTI_Kirasa-N_Armor"]/statBases</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="JDSTarkov_BNTI_Kirasa-N_Armor"]</xpath>
            <value>
              <statBases />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="JDSTarkov_BNTI_Kirasa-N_Armor"]/statBases</xpath>
          <value>
            <statBases>
              <MaxHitPoints>75</MaxHitPoints>
              <Flammability>0.6</Flammability>
              <DeteriorationRate>2</DeteriorationRate>
              <Beauty>-3</Beauty>
              <WorkToMake>10000</WorkToMake>
              <Mass>7</Mass>
              <Bulk>21</Bulk>
              <WornBulk>7</WornBulk>
              <ArmorRating_Sharp>11</ArmorRating_Sharp>
              <ArmorRating_Blunt>41</ArmorRating_Blunt>
              <ArmorRating_Heat>0.27</ArmorRating_Heat>
              <Insulation_Cold>1</Insulation_Cold>
              <EquipDelay>4.5</EquipDelay>
            </statBases>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="JDSTarkov_BNTI_Kirasa-N_Armor"]</xpath>
          <value>
            <li Class="CombatExtended.PartialArmorExt">
              <stats />
            </li>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="JDSTarkov_BNTI_Kirasa-N_Armor"]/equippedStatOffsets</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="JDSTarkov_BNTI_Kirasa-N_Armor"]</xpath>
            <value>
              <equippedStatOffsets />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="JDSTarkov_BNTI_Kirasa-N_Armor"]/equippedStatOffsets</xpath>
          <value>
            <equippedStatOffsets />
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="JDSTarkov_BNTI_Kirasa-N_Armor"]/apparel</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="JDSTarkov_BNTI_Kirasa-N_Armor"]</xpath>
            <value>
              <apparel />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="JDSTarkov_BNTI_Kirasa-N_Armor"]/apparel/bodyPartGroups</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="JDSTarkov_BNTI_Kirasa-N_Armor"]/apparel</xpath>
            <value>
              <bodyPartGroups />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="JDSTarkov_BNTI_Kirasa-N_Armor"]/apparel/bodyPartGroups</xpath>
          <value>
            <bodyPartGroups>
              <li>Waist</li>
              <li>UpperChest</li>
              <li>Shoulders</li>
            </bodyPartGroups>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>